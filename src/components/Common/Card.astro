---
import { Image } from "astro:assets";
interface Props {
  imagen: ImageMetadata;
  subTitle: string;
  body: string;
  body2?: string;
}
const { imagen, subTitle, body, body2 } = Astro.props;
---

<div
  class="flex flex-col md:flex-row items-center justify-between gap-6 py-6 lg:py-10"
>
  <div class="w-full md:w-1/2 mb-8 md:mb-0">
    <Image
      src={imagen}
      alt={subTitle}
      loading={"eager"}
      class="w-full h-auto rounded-xl shadow-lg"
    />
  </div>
  <div class="w-full md:w-1/2">
    <h2 class="text-3xl font-extrabold text-texto mb-4">{subTitle}</h2>
    <p class="text-texto leading-relaxed mb-6">
      {body}
    </p>
    {body2 ? <p class="text-texto leading-relaxed mb-6">{body2}</p> : ""}
  </div>
</div>
