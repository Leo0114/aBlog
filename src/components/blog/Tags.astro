---
interface Props {
  tags: string[];
}
const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2 mt-2">
  {
    tags.map((tag: string, index: number) => (
      <span
        class={
          index % 2 === 0
            ? "px-2 py-1 bg-primary text-white rounded-full text-xs hover:opacity-90"
            : "px-2 py-1 bg-secondary text-white rounded-full text-xs hover:opacity-90"
        }
      >
        <a href={"/articles/tag" + tag}>{tag}</a>
      </span>
    ))
  }
</div>
